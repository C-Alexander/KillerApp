@model Shadow_Arena.Controllers.CreateCharacterViewModel

@{
    ViewData["Title"] = "Create Character";
    Layout = "_GameLayout";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="CreateCharacter">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ClassId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="ClassId" asp-items="@ViewBag.Classes"></select>
                <span asp-validation-for="ClassId" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
