@using System.Threading.Tasks
@model Shadow_Arena.Models.RegisterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ShadowArena</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" href="/css/Registration-Form-with-Photo.css">
</head>
<body>
<div class="register-photo">
    <div class="form-container">
        <form asp-controller="Player" asp-action="CreatePlayer" method="post" class="form-horizontal">
            <h2 class="text-center"><strong>Join</strong> the fight.</h2>
            <div class="form-group">
                <input asp-for="Email" class="form-control" type="email" required="" placeholder="Email" maxlength="100" minlength="5">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Username" class="form-control" placeholder="Username">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control" type="password" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Password (repeat)">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group"></div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Sign Up</button>
                </div><a href="#" class="already">Or login here</a>
</form>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
</body>
</html>